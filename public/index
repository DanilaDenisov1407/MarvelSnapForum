<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login / Register</title>
  <style>
    body { background: #111; color: white; font-family: sans-serif; text-align: center; padding: 40px; }
    input { margin: 10px; padding: 8px; border-radius: 5px; }
    button { padding: 10px 20px; margin: 10px; border: none; background: red; color: white; border-radius: 5px; }
  </style>
</head>
<body>
  <h1>Welcome</h1>
  <input id="login" placeholder="Login (only a-zA-Z0-9)" /><br>
  <input id="password" type="password" placeholder="Password (only a-zA-Z0-9)" /><br>
  <button onclick="register()">Register</button>
  <button onclick="login()">Login</button>
  <p id="message"></p>

  <script>
    async function request(endpoint) {
      const login = document.getElementById('login').value;
      const password = document.getElementById('password').value;
      const isValid = /^[a-zA-Z0-9]+$/.test(login) && /^[a-zA-Z0-9]+$/.test(password);

      if (!isValid) {
        document.getElementById('message').textContent = 'Invalid characters!';
        return;
      }

      const res = await fetch(`/${endpoint}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ login, password })
      });

      const data = await res.json();
      if (data.success) {
        localStorage.setItem("user", login);
        window.location.href = '/roulette.html';
      } else {
        document.getElementById('message').textContent = data.message;
      }
    }

    function register() { request('register'); }
    function login() { request('login'); }
  </script>
</body>
</html>
